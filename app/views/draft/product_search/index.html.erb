<div class="row justify-content-center">
  <h1>
    Product Search
  </h1>
</div>

<div class="row">
  <div class="col-5">
    <div class="card border border-secondary mb-2">
      <div class="card-header">
        <%= render "product_search/form", search_set: @search_set, input_group: @input_group %>
      </div>
      <div class="card-body" id="tab-pane">
        <%= render 'field_items/aside', field_items: @search_set %>
      </div>
    </div>
  </div>

  <div class="col-7">
    <div id="show-card">
    </div>
  </div>
</div>
