<%= form_with model: product_item, url: url, scope: form_scope(product_item), id: dom_ref(product_item, :edit) do |f| %>
  <div class="form-row align-items-center">
    <div class="col-5">
      <div class="input-group input-group-sm mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">type:</span>
        </div>
        <%= f.select :type, types(ProductItem), {prompt: "- select type -"}, {class: "form-control"} %>
      </div>
    </div>

    <div class="col-7">
      <div class="input-group input-group-sm mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">name:</span>
        </div>
        <%= f.text_field :item_name, placeholder: "name", class: "form-control" %>
        <div class="input-group-append">
          <button class="btn btn-sm btn-outline-primary" type="submit">edit</button>
        </div>
      </div>
    </div>
  </div>

  <div class="form-row toggle-field-group" id="<%= dom_ref(product_item, :form, :fields) %>">
    <%= render "product_items/fields_for", product_item: product_item, f: f %>
  </div>
<% end %>
