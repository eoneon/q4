<div class="card border border-dark mb-1" id="<%= dom_ref(target, :show) %>">
  <div class="card-header py-0" id="<%= dom_ref(target, :header) %>">
    <div class="row align-items-center bg-light">

      <div class="col-auto mr-0 mx-0 pr-0">
        <%= render "item_groups/sorter", item_group: item_group %>
      </div>

      <div class="col-10 mt-3">
        <%= render 'field_items/edit', field_item: target, url: field_item_path(target) %>
      </div>

      <div class="col-1">
        <%= render "field_items/field_toggle", field_item: target, delete_url: item_group_path(item_group) %>
      </div>
    </div>
  </div>

  <div class="card-body p-1" id="<%= dom_ref(target, :body) %>">
    <div id='<%= dom_ref(target, :index) %>'>
      <%= render "product_items/index", origin: target %>
    </div>
  </div>
</div>
