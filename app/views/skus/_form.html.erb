<%= form_with model: Item.new, url: invoice_skus_path(invoice), id: "new-skus" do |f| %>
  <div class="form">
    <div class="card bg-gray-d border-0 mb-2">
      <div class="form-row align-items-center p-1">

        <div class="col-3 ml-0">
          <div class="input-group input-group-sm">
            <label class="fs-xs font-weight-light text-secondary pt-2 px-1">skus</label>
            <%= f.text_field :skus, placeholder: "enter sku range", class: "form-control" %>
          </div>
        </div>

        <div class="col-3 ml-0">
          <div class="input-group input-group-sm">
            <label class="fs-xs font-weight-light text-secondary pt-2 px-1">artist</label>
            <%= f.collection_select :artist_id, Artist.all, :id, :artist_name, {include_blank: true}, class: "form-control artist_id", id: "artist_id" %>
          </div>
        </div>

        <div class="col-3 ml-0">
          <div class="input-group input-group-sm">
            <label class="fs-xs font-weight-light text-secondary pt-2 px-1">prd</label>
            <%= f.collection_select :product_id, Product.all, :id, :product_name, {include_blank: true}, class: "form-control product_id", id: "product_id" %>
          </div>
        </div>

        <div class="col-3 ml-0">
          <div class="input-group input-group-sm">
            <div class="input-group-prepend">
              <button class="btn btn-outline-secondary toggle-view" type="button" id="title-toggle"><span class="fs-xs font-weight-light text-secondary pt-2 px-0">title</span></button>
            </div>
            <%= render 'items/title', titles: titles %>
            <%= f.text_field :title, class: "form-control title-toggle default-show show", id: 'title-text' %>
          </div>
        </div>

        <div class="col-md-1 offset-md-8">
          <button class="btn btn-sm btn-outline-primary form-control" type="submit">save</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
