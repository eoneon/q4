<%= form_with model: item, url: invoice_sku_path(invoice, item), id: "edit-sku" do |f| %>
  <div class="form">
    <div class="card p-1 mb-1 bg-disabled border-0">
      <div class="form-row">

        <div class="col-2">
          <div class="input-group input-group-sm">
            <div class="input-group-prepend">
              <button id="" class="caret-toggle btn btn-sm bg-transparent mx-1 my-1 pl-1 py-0" type="button" <%= disable_btn(nil) %>></button>
            </div>
            <div class="input-group-prepend">
              <span class="fs-xs font-weight-light text-secondary kind-label pt-2 pr-1">sku</span>
            </div>
            <%= f.number_field :sku, placeholder: "sku", class: "form-control bg-gray-b field-param" %>
          </div>
        </div>
        <div class="col-md-1 offset-md-9">
          <button class="btn btn-sm btn-outline-info form-control" type="submit">save</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
