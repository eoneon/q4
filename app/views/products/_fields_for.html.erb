<% product.to_class.assoc_names.each do |assoc| %>
  <%= f.fields_for assoc.to_sym do |ff| %>
    <div class="col-12 collapse toggle-field" id="<%= dom_ref(product, assoc.to_sym, :add) %>">
      <%= render "products/select_field", product: product, f: ff, assoc: assoc %>
    </div>

    <div class="col-12 collapse toggle-field" id="<%= dom_ref(product, assoc.to_sym, :new) %>">
      <%= render "products/text_field", f: ff, assoc: assoc %>
    </div>
  <% end %>
<% end %>
