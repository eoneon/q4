<%= form_with model: item, url: invoice_item_path(invoice, item), id: "edit-item" do |f| %>
  <h5><span>Tagline: <%= @item.hattr('csv_tags', 'tagline') %></span></h5>

  <h5><span>Description: <%= @item.hattr('csv_tags', 'description') %></span></h5> 
  <div class="form">

    <div class="card border border-secondary p-2 mb-2">
      <div class="row">
        <div class="col-2">
          <label>sku</label>
          <%= f.number_field :sku, placeholder: "sku", class: "form-control form-control-sm mr-sm-2 input-field" %>
        </div>

        <div class="col-4">
          <label>title</label>
          <%= f.text_field :title, placeholder: "title", class: "form-control form-control-sm mr-sm-2 input-field" %>
        </div>

        <div class="col-2">
          <label>retail</label>
          <%= f.number_field :retail, placeholder: "retail", class: "form-control form-control-sm mr-sm-2 input-field" %>
        </div>

        <div class="col-2">
          <label>qty</label>
          <%= f.number_field :qty, placeholder: "qty", class: "form-control form-control-sm mr-sm-2 input-field" %>
        </div>
      </div>
    </div>

    <button class="btn btn-sm btn-outline-primary form-control-sm" type="submit">edit</button>
    <%= link_to "delete", [invoice, item], method: :delete, class: 'btn btn-sm btn-outline-danger form-control-sm', data: { confirm: 'Are you sure?' } %>

  </div>
<% end %>
