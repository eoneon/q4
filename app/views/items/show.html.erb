<div class="row justify-content-center">
  <h1 id="sku">
    Sku: <span id="sku-header"><%= @item.sku %></span><span id="item-product"></span>
  </h1>
</div>

<div class="row justify-content-center">
  <h4>
    <a href="<%= suppliers_path %>" class="btn btn-link" type="button">
      <%= @item.invoice.supplier.supplier_name %>
    </a>
    <a href="<%= invoice_path(@item.invoice) %>" class="btn btn-link" type="button">
      <%= @item.invoice.invoice_number %>
    </a>
  </h4>

</div>
<hr>

<div class="row justify-content-center">
  <div class="col-4">

    <div class="card border border-secondary px-3 py-2 mb-2">
      <%= render "item_artists/update", item: @item, artist: @item.artist %>
    </div>

    <div class="card border border-secondary mb-2" id="item-products-aside">
      <div class="card-header">
        <%= render "item_products/forms/search", item: @item, inputs: @inputs %>
        <%= render "item_products/forms/post", item: @item, product: @item.product %>
        <%= render "item_products/forms/patch", item: @item, product: @item.product %>
        <%= render "item_products/forms/delete", item: @item, product: @item.product %>
      </div>

      <div class="card-body" id="tab-pane">
        <div class="list-group" id="item-products-index" role="tablist">
          <% @products.each do |product| %>
            <%= render "item_products/product", item: @item, product: product %>
          <% end %>
        </div>
      </div>

    </div>
  </div>


  <div class="col-8">
    <div id="show-card">
      <%= render "item_fields/edit", item: @item %>
      <%#= render "items/edit", invoice: @item.invoice, item: @item, product: @product, artist: @artist %>
    </div>
  </div>
</div>
