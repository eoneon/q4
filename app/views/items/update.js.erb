var toggle = "<%= raw @toggle %>"
$("#<%= dom_ref('edit-item', @item) %>").html("<%= j render 'items/edit', invoice: @item.invoice, item: @item, titles: @titles, rows: @rows %>");
$("#description-toggle").html("<%= j render 'items/description', item: @item %>");
$("#<%= dom_ref('tagline', @item) %>").html("<%= j render 'table_skus/abbrv_tagline', item: @item %>");

if (toggle.length && $('#'+toggle).hasClass("caret-toggle")){
  var id = $('#'+toggle).attr("id");
  $("#caret-id").val(id);
  $('#'+id).find("i").toggleClass("fa-caret-right fa-caret-down");
  $('#'+id).closest(".card").find(".card-body.collapse").toggleClass("show collapse");
}
