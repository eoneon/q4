<%= form_with model: Invoice.new, url: supplier_invoices_path(supplier), id: "new-invoice" do |f| %>
  <div class="form">
    <div class="input-group input-group-sm">
      <%= f.number_field :invoice_number, placeholder: "invoice #", class: "form-control form-control-sm" %>
      <div class="input-group-append">
        <button class="btn btn-sm btn-outline-primary form-control-sm" type="submit">save</button>
      </div>
    </div>  
  </div>
<% end %>
