<%= form_with model: Invoice.new, url: supplier_invoices_path(supplier), id: "new-invoice" do |f| %>
  <div class="form">
    <div class="card bg-gray-d p-0 mb-1">
      <div class="form-row pl-1 ml-0 mb-2">
        <div class="col-3 pt-2">
          <div class="input-group input-group-sm">
            <%= render "item_fields/label", label: 'inv#' %>
            <%= f.number_field :invoice_number, maxlength: 6, class: boot_classes(:input) %>
          </div>
        </div>

        <div class="col-3 pt-2">
          <div class="input-group input-group-sm">
            <%= render "item_fields/label", label: 'name' %>
            <%= f.text_field :invoice_name, class: boot_classes(:input) %>
          </div>
        </div>

        <div class="col-md-1 offset-md-5 pt-2 pr-3">
          <button class="<%= boot_classes(:submit, 'badge-primary') %>" type="submit">edit</button>
        </div>

      </div>
    </div>
  </div>
<% end %>
