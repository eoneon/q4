<div class="card pb-0" id="<%= dom_tag(@supplier, :show) %>">
  <div class="card-header border-0 p-1">
    <div class="row">
      <div class="col">
        <%= render 'suppliers/edit', supplier: @supplier %>
      </div>
      <div class="col">
        <%= render 'invoices/form', supplier: @supplier, invoice: Invoice.new %>
      </div>
    </div>
  </div>

  <div class="card-body p-0">
    <table class="table table-striped table-hover mb-0">
      <tbody>
        <%= render 'suppliers/table_body', invoices: @supplier.invoices %>
      </tbody>
    </table>
  </div>
</div>
