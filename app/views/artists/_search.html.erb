<%= form_with url: search_artists_url, method: :get, id: "artist-search" do |f| %>
  <div class="form-row">
    <div class="input-group input-group-sm mr-2">
      <%= f.collection_select :id, Artist.all, :id, :artist_name, {include_blank: true}, class: "form-control form-control-sm artist-search" %>
    </div>
  </div>
<% end %>
