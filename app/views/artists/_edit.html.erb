<%= form_with model: artist, id: "artist-edit" do |f| %>
  <div class="form">
    <div class="card bg-gray-d p-0 mb-1">
      <div class="form-row pl-1 ml-0 mb-1 mr-1">
        <div class="col-4 pt-2">
          <div class="input-group input-group-sm">
            <%= render "item_fields/label", label: 'artist' %>
            <%= f.text_field :artist_name, class: boot_classes(:input, 'required-field') %>
          </div>
        </div>

        <%= render 'artists/tags', f: f, fields: %w[yob yod], artist: artist %>

        <div class="col-2 pt-2">
          <div class="input-group input-group-sm">
            <%= render "item_fields/label", label: 'id' %>
            <%= f.number_field :artist_id, class: boot_classes(:input) %>
          </div>
        </div>
        <div class="col-md-1 offset-md-1 pt-2">
          <button class="<%= boot_classes(:submit, 'badge-primary') %>" type="submit">edit</button>
        </div>
      </div>
      <div class="form-row pl-1 pr-2 ml-0 mb-2">
        <%= render 'artists/tags', f: f, fields: %w[title body], artist: artist %>
      </div>
    </div>
  </div>
<% end %>
