<% artist_form_row(fields).each do |field| %>
  <%= f.fields_for :tags, OpenStruct.new(artist.tags) do |ff| %>
    <div class="<%= "#{field['col']} pt-2" %>">
      <div class="input-group input-group-sm">
        <%= render "artists/fields/#{field_type}", f: ff, label: field['label'], field_name: field['name'] %>
      </div>
    </div>
  <% end %>
<% end %>
