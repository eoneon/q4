<div class="card p-1 mb-1 bg-disabled border-0" id="<%= dom_ref(:card, item) %>">
  <div class="card-header bg-transparent border-0 pt-0 pb-0 pr-0 mr-0">
    <div class="row">
      <div class="col-auto p-0 pt-1 pr-0 ml-0 mr-0 my-0">
        <span class="fs-s sku-span pt-1"><%= item.sku %></span>
        <%= render 'table_skus/abbrv_tagline', item: item %>
      </div>

      <div class="col d-flex flex-row-reverse ml-0 pl-0 py-0 my-0 mr-1">
        <%= render 'table_skus/nav/navbar', item: item %>
      </div>
    </div>
  </div>
  <div class="card-body collapse pt-1 pb-1 px-1 bg-light rounded border-0 " id="<%= dom_ref('navbar-forms', item) %>">
  </div>
</div>
